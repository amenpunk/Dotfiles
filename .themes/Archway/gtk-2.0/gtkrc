#
# This is the GTK+ 2 version of Adwaita. It's whole purpose is to look as the
# GTK+ 3 version as much as possible until GTK+ 2 dies completely.
#
# Note: comments for explaining styles are on the bottom of each file beside the
# widget matches.

# Declare the colours used throughout the theme.
# There shouldn't be any fiddling with them in the theme files themselves in
# order to not mess up the dark theme.

# Text/base
gtk-color-scheme = "text_color:#e3e3e3\nbase_color:#262626"
# Foreground/background
gtk-color-scheme = "fg_color:#dbdbdb\nbg_color:#282828"
#Â Selected foreground/background
gtk-color-scheme = "selected_fg_color:#ffffff\nselected_bg_color:#1793D1"
# Active Text
gtk-color-scheme = "active_fg:#e3e3e3"
# Insensitive foreground/background
gtk-color-scheme = "insensitive_fg_color:#828282\ninsensitive_bg_color:#272727"
# Menus
gtk-color-scheme = "menu_color:#282828"
# Links
gtk-color-scheme = "link_color:#168CC7\nvisited_link_color:#1795D4"
# Treeview headers
gtk-color-scheme = "column_header_color:#898b8b\nhover_column_header_color:#e3e3e3"
# Window decoration
gtk-color-scheme = "window_color:#2c3133"
# Tooltips
gtk-color-scheme = "tooltip_fg_color:#ffffff\ntooltip_bg_color:#262626"

# Set GTK settings
gtk-auto-mnemonics              = 1
gtk-primary-button-warps-slider = 1

# And hand over the control to the theme files
include "main.rc"
include "apps.rc"
include "hacks.rc"
include "xfce.rc"
