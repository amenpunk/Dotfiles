general {
  colors = true
    interval = 5
    color_good = "#72D5A3"
    color_degraded = "#F0DFAF"
    color_bad = "#DCA3A3"
}

order += "wireless _first_"
order += "ethernet _first_"
order += "battery all"
order += "disk /"
order += "memory"
order += "volume master"
order += "tztime local"


wireless _first_ {
        format_up = "(%quality at %essid, %bitrate / %frequency ) [%ip] "
        format_down = "NO WIFI"
}

ethernet _first_ {
        format_up = "E: %ip (%speed)"
        format_down = "RJ-45 DOWN"
}

battery all {
    format = "%status %percentage %remaining %emptytime"
        format_down = "No battery"
        status_chr = "âš¡"
        status_bat = "ðŸ”‹"
        status_unk = "? UNK"
        status_full = "â˜» FULL"
        path = "/sys/class/power_supply/BAT%d/uevent"
        low_threshold = 10
}

disk "/" {
        format = "%avail AVA"
}

load {
        format = "%1min"
}


volume master {
        format = "â™ª: %volume"
        format_muted = "â™ª: muted (%volume)"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}

memory {
        format = "MEMORY [%used]"
        threshold_degraded = "1G"
        format_degraded = "MEMORY < %available"
}

tztime local {
    timezone = "America/Guatemala"
    format = "%d/%m/%y %I:%M:%S"
}

